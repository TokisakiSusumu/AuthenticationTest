@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<h1>Welcome to Blazor Auth App</h1>

<AuthorizeView>
    <Authorized>
        <p>You are logged in as @context.User.Identity?.Name</p>
    </Authorized>
    <NotAuthorized>
        <p>Please <a href="/login">login</a> to access protected content.</p>
    </NotAuthorized>
</AuthorizeView>